@model DoanhNghiepPortal.Models.BusinessSearchModel
@{
    ViewData["Title"] = "Tra Cứu Doanh Nghiệp";
    Layout = "_Layout";
}

<div class="container" style="margin-top: 150px; padding-top: 30px;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Tra Cứu Doanh Nghiệp</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Form tìm kiếm -->
        <div class="col-lg-4">
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fa fa-search"></i> Tìm Kiếm Doanh Nghiệp
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Search" method="post">
                        <div class="mb-3">
                            <label asp-for="BusinessCode" class="form-label">
                                <i class="fa fa-barcode"></i> @Html.DisplayNameFor(m => m.BusinessCode)
                            </label>
                            <input asp-for="BusinessCode" class="form-control" placeholder="Nhập mã số doanh nghiệp" />
                            <span asp-validation-for="BusinessCode" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BusinessName" class="form-label">
                                <i class="fa fa-building"></i> @Html.DisplayNameFor(m => m.BusinessName)
                            </label>
                            <input asp-for="BusinessName" class="form-control" placeholder="Nhập tên doanh nghiệp" />
                            <span asp-validation-for="BusinessName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">
                                <i class="fa fa-map-marker"></i> @Html.DisplayNameFor(m => m.Address)
                            </label>
                            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Province" class="form-label">
                                <i class="fa fa-flag"></i> @Html.DisplayNameFor(m => m.Province)
                            </label>
                            <select asp-for="Province" class="form-select">
                                <option value="">-- Chọn tỉnh/thành phố --</option>
                                <option value="TP.HCM">TP.HCM</option>
                                <option value="Hà Nội">Hà Nội</option>
                                <option value="Đà Nẵng">Đà Nẵng</option>
                                <option value="Cần Thơ">Cần Thơ</option>
                                <option value="Hải Phòng">Hải Phòng</option>
                            </select>
                            <span asp-validation-for="Province" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">
                                <i class="fa fa-circle"></i> @Html.DisplayNameFor(m => m.Status)
                            </label>
                            <select asp-for="Status" class="form-select">
                                <option value="">-- Tất cả trạng thái --</option>
                                <option value="Đang hoạt động">Đang hoạt động</option>
                                <option value="Tạm ngừng hoạt động">Tạm ngừng hoạt động</option>
                                <option value="Giải thể">Giải thể</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-search"></i> Tìm Kiếm
                            </button>
                            <a href="@Url.Action("Search", "Business")" class="btn btn-outline-secondary">
                                <i class="fa fa-refresh"></i> Làm Mới
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Thống kê -->
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="fa fa-chart-bar"></i> Thống Kê
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary">@ViewBag.TotalBusinesses</h4>
                            <small class="text-muted">Tổng doanh nghiệp</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">@ViewBag.ActiveBusinesses</h4>
                            <small class="text-muted">Đang hoạt động</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kết quả tìm kiếm -->
        <div class="col-lg-8">
            @if (ViewBag.SearchResults != null)
            {
                var results = (List<DoanhNghiepPortal.Models.BusinessModel>)ViewBag.SearchResults;
                
                <div class="card shadow-lg">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fa fa-list"></i> Kết Quả Tìm Kiếm (@results.Count)
                        </h5>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a href="@Url.Action("Create", "Business")" class="btn btn-light btn-sm">
                                <i class="fa fa-plus"></i> Thêm Mới
                            </a>
                        }
                    </div>
                    <div class="card-body p-0">
                        @if (results.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Mã số</th>
                                            <th>Tên doanh nghiệp</th>
                                            <th>Địa chỉ</th>
                                            <th>Trạng thái</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var business in results)
                                        {
                                            <tr>
                                                <td>
                                                    <strong class="text-primary">@business.BusinessCode</strong>
                                                </td>
                                                <td>
                                                    <div>
                                                        <strong>@business.BusinessName</strong>
                                                        @if (!string.IsNullOrEmpty(business.ShortName))
                                                        {
                                                            <br><small class="text-muted">(@business.ShortName)</small>
                                                        }
                                                    </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        <small>@business.Address</small>
                                                        @if (!string.IsNullOrEmpty(business.Province))
                                                        {
                                                            <br><small class="text-muted">@business.Province</small>
                                                        }
                                                    </div>
                                                </td>
                                                <td>
                                                    @if (business.Status == "Đang hoạt động")
                                                    {
                                                        <span class="badge bg-success">@business.Status</span>
                                                    }
                                                    else if (business.Status == "Tạm ngừng hoạt động")
                                                    {
                                                        <span class="badge bg-warning text-dark">@business.Status</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">@business.Status</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="@Url.Action("Details", "Business", new { id = business.Id })" 
                                                           class="btn btn-outline-primary" title="Xem chi tiết">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                        @if (User.Identity?.IsAuthenticated == true)
                                                        {
                                                            <a href="@Url.Action("Edit", "Business", new { id = business.Id })" 
                                                               class="btn btn-outline-warning" title="Chỉnh sửa">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                            <button type="button" class="btn btn-outline-danger" 
                                                                    onclick="deleteBusiness(@business.Id, '@business.BusinessName')" title="Xóa">
                                                                <i class="fa fa-trash"></i>
                                                            </button>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fa fa-search fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Không tìm thấy doanh nghiệp nào</h5>
                                <p class="text-muted">Vui lòng thử lại với từ khóa khác</p>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-lg">
                    <div class="card-body text-center py-5">
                        <i class="fa fa-search fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Tra cứu thông tin doanh nghiệp</h5>
                        <p class="text-muted">Sử dụng form bên trái để tìm kiếm doanh nghiệp</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa doanh nghiệp <strong id="businessName"></strong>?</p>
                <p class="text-danger"><small>Hành động này không thể hoàn tác!</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .breadcrumb {
        background: none;
        padding: 0;
        margin-bottom: 1rem;
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    
    .btn {
        border-radius: 10px;
        padding: 12px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .table {
        margin-bottom: 0;
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        color: #495057;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>

<script>
    function deleteBusiness(id, name) {
        document.getElementById('businessName').textContent = name;
        document.getElementById('deleteForm').action = '@Url.Action("Delete", "Business")/' + id;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 