@model BusinessRegistrationModel
@{
    ViewData["Title"] = "Chi Tiết Hồ Sơ Doanh Nghiệp";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">Chi Tiết Hồ Sơ Doanh Nghiệp</h4>
            <p class="text-muted mb-0">ID: @Model.Id</p>
        </div>
        <div>
            <a href="/Admin/BusinessRegistrations" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
            @if (Model.Status == "Chờ duyệt")
            {
                <button class="btn btn-success me-2" onclick="updateStatus('Đã duyệt')">
                    <i class="fas fa-check"></i> Duyệt
                </button>
                <button class="btn btn-danger" onclick="updateStatus('Từ chối')">
                    <i class="fas fa-times"></i> Từ chối
                </button>
            }
        </div>
    </div>

    <div class="row">
        <!-- Main Information -->
        <div class="col-lg-8">
            <div class="table-card mb-4">
                <div class="table-header">
                    <h5 class="mb-0">Thông Tin Doanh Nghiệp</h5>
                </div>
                <div class="p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Tên doanh nghiệp</label>
                            <p class="mb-0">@Model.BusinessName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Loại hình doanh nghiệp</label>
                            <p class="mb-0">@Model.BusinessType</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Ngành nghề kinh doanh</label>
                            <p class="mb-0">@Model.BusinessLine</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Vốn điều lệ</label>
                            <p class="mb-0">@Model.CharterCapital.ToString("N0") @Model.CapitalUnit</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Ngày thành lập</label>
                            <p class="mb-0">@(Model.EstablishmentDate?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Trạng thái</label>
                            <p class="mb-0">
                                @if (Model.Status == "Chờ duyệt")
                                {
                                    <span class="status-badge status-pending">Chờ duyệt</span>
                                }
                                else if (Model.Status == "Đã duyệt")
                                {
                                    <span class="status-badge status-approved">Đã duyệt</span>
                                }
                                else
                                {
                                    <span class="status-badge status-rejected">Từ chối</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Address Information -->
            <div class="table-card mb-4">
                <div class="table-header">
                    <h5 class="mb-0">Thông Tin Địa Chỉ</h5>
                </div>
                <div class="p-4">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label fw-bold">Địa chỉ trụ sở</label>
                            <p class="mb-0">@Model.Address</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-bold">Tỉnh/Thành phố</label>
                            <p class="mb-0">@Model.Province</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-bold">Quận/Huyện</label>
                            <p class="mb-0">@Model.District</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-bold">Phường/Xã</label>
                            <p class="mb-0">@Model.Ward</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="table-card mb-4">
                <div class="table-header">
                    <h5 class="mb-0">Thông Tin Liên Hệ</h5>
                </div>
                <div class="p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Số điện thoại</label>
                            <p class="mb-0">@Model.PhoneNumber</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <p class="mb-0">@Model.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Website</label>
                            <p class="mb-0">@(string.IsNullOrEmpty(Model.Website) ? "Chưa cập nhật" : Model.Website)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Representative Information -->
            <div class="table-card mb-4">
                <div class="table-header">
                    <h5 class="mb-0">Người Đại Diện</h5>
                </div>
                <div class="p-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Họ và tên</label>
                        <p class="mb-0">@Model.Representative</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Chức vụ</label>
                        <p class="mb-0">@Model.Position</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Số CMND/CCCD</label>
                        <p class="mb-0">@Model.IdNumber</p>
                    </div>
                </div>
            </div>

            <!-- Registration Information -->
            <div class="table-card mb-4">
                <div class="table-header">
                    <h5 class="mb-0">Thông Tin Đăng Ký</h5>
                </div>
                <div class="p-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ngày đăng ký</label>
                        <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ngày cập nhật</label>
                            <p class="mb-0">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    }
                    @if (Model.ApprovedAt.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ngày duyệt</label>
                            <p class="mb-0">@Model.ApprovedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ApprovedBy))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Người duyệt</label>
                            <p class="mb-0">@Model.ApprovedBy</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Notes -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="table-card">
                    <div class="table-header">
                        <h5 class="mb-0">Ghi Chú</h5>
                    </div>
                    <div class="p-4">
                        <p class="mb-0">@Model.Notes</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Status Update Modal -->
<div class="modal fade" id="statusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cập nhật trạng thái</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="statusForm">
                    <input type="hidden" id="newStatus">
                    <div class="mb-3">
                        <label class="form-label">Ghi chú</label>
                        <textarea class="form-control" id="notes" rows="3" placeholder="Nhập ghi chú (tùy chọn)"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="submitStatusUpdate()">Cập nhật</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateStatus(status) {
            document.getElementById('newStatus').value = status;
            document.getElementById('notes').value = '';
            
            const modal = new bootstrap.Modal(document.getElementById('statusModal'));
            modal.show();
        }

        function submitStatusUpdate() {
            const status = document.getElementById('newStatus').value;
            const notes = document.getElementById('notes').value;

            fetch('/Admin/UpdateBusinessStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `id=@Model.Id&status=${status}&notes=${encodeURIComponent(notes)}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showAlert('Thành công', data.message, 'success');
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    showAlert('Lỗi', data.message, 'error');
                }
            })
            .catch(error => {
                showAlert('Lỗi', 'Có lỗi xảy ra khi cập nhật trạng thái', 'error');
            });

            const modal = bootstrap.Modal.getInstance(document.getElementById('statusModal'));
            modal.hide();
        }

        function showAlert(title, message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                <strong>${title}</strong><br>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);

            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }
    </script>
} 