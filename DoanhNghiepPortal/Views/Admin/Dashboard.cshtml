        }
        
        .stat-card.registrations {
            border-left: 4px solid #28a745;
        }
        
        .stat-card.licenses {
            border-left: 4px solid #ffc107;
        }
        
        .stat-card.articles {
            border-left: 4px solid #dc3545;
        }
        
        .stat-card.pending {
            border-left: 4px solid #fd7e14;
        }
        
        .stat-card.approved {
