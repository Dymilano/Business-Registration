        }

        // T·∫£i ho·∫°t ƒë·ªông g·∫ßn ƒë√¢y
        function loadRecentActivities() {
            // Gi·∫£ l·∫≠p d·ªØ li·ªáu ho·∫°t ƒë·ªông g·∫ßn ƒë√¢y
            const activities = [
                {
                    type: 'registration',
                    title: 'H·ªì s∆° ƒëƒÉng k√Ω doanh nghi·ªáp m·ªõi',
                    time: '2 ph√∫t tr∆∞·ªõc',
                    icon: 'fas fa-building'
                },
                {
                    type: 'license',
                    title: 'H·ªì s∆° ƒëƒÉng k√Ω kinh doanh m·ªõi',
                    time: '5 ph√∫t tr∆∞·ªõc',
                    icon: 'fas fa-store'
                },
                {
                    type: 'user',
                    title: 'Ng∆∞·ªùi d√πng m·ªõi ƒëƒÉng k√Ω',
                    time: '10 ph√∫t tr∆∞·ªõc',
                    icon: 'fas fa-user-plus'
                },
                {
                    type: 'registration',
                    title: 'H·ªì s∆° doanh nghi·ªáp ƒë∆∞·ª£c duy·ªát',
                    time: '15 ph√∫t tr∆∞·ªõc',
                    icon: 'fas fa-check'
                }
            ];

            const activitiesContainer = document.getElementById('recentActivities');
            activitiesContainer.innerHTML = activities.map(activity => `
                <div class="activity-item">
                    <div class="activity-icon ${activity.type}">
                        <i class="${activity.icon}"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">${activity.title}</div>
                        <div class="activity-time">${activity.time}</div>
                    </div>
                </div>
            `).join('');
        }

        // T·∫£i bi·ªÉu ƒë·ªì th·ªëng k√™ theo th√°ng
        function loadMonthlyChart() {
            fetch('/Admin/GetMonthlyStats')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        createMonthlyChart(data.data);
                    }
                })
                .catch(error => {
                    console.error('Error loading monthly stats:', error);
                });
        }

        // T·∫°o bi·ªÉu ƒë·ªì th·ªëng k√™ theo th√°ng
        function createMonthlyChart(data) {
            const ctx = document.getElementById('monthlyChart').getContext('2d');
            
            const labels = data.map(item => item.MonthName);
            const registrations = data.map(item => item.Registrations);
            const licenses = data.map(item => item.Licenses);
            const users = data.map(item => item.Users);

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'ƒêƒÉng k√Ω doanh nghi·ªáp',
                            data: registrations,
                            borderColor: '#28a745',
