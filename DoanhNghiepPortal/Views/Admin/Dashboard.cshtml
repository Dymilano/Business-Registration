        }
        
        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
        }
        
        .stat-card.users .stat-icon {
            color: #007bff;
        }
        
        .stat-card.registrations .stat-icon {
            color: #28a745;
        }
        
        .stat-card.licenses .stat-icon {
            color: #ffc107;
        }
        
        .stat-card.articles .stat-icon {
            color: #dc3545;
        }
        
        .stat-card.pending .stat-icon {
            color: #fd7e14;
        }
        
        .stat-card.approved .stat-icon {
