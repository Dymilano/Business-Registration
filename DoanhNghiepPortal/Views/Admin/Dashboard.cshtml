@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // T·∫£i d·ªØ li·ªáu th·ªëng k√™
        function loadStats() {
            fetch('/Admin/GetStats')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        updateStats(data.data);
                    }
                })
