@model DoanhNghiepPortal.Models.ChangePasswordModel
@{
    ViewData["Title"] = "Đổi Mật Khẩu";
    Layout = "_Layout";
}

<div class="container" style="margin-top: 150px; padding-top: 30px;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Profile", "Account")">Hồ sơ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Đổi Mật Khẩu</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0">
                        <i class="fa fa-lock"></i> Đổi Mật Khẩu
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">
                                <i class="fa fa-key"></i> @Html.DisplayNameFor(m => m.CurrentPassword)
                            </label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="Nhập mật khẩu hiện tại" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fa fa-lock"></i> @Html.DisplayNameFor(m => m.NewPassword)
                            </label>
                            <input asp-for="NewPassword" class="form-control" placeholder="Nhập mật khẩu mới" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <i class="fa fa-info-circle"></i> Mật khẩu phải có ít nhất 6 ký tự
                            </small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fa fa-check-circle"></i> @Html.DisplayNameFor(m => m.ConfirmPassword)
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu mới" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fa fa-save"></i> Đổi Mật Khẩu
                            </button>
                            <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-secondary">
                                <i class="fa fa-arrow-left"></i> Quay Lại Hồ Sơ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Lưu ý bảo mật -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title text-muted">
                        <i class="fa fa-shield"></i> Lưu ý bảo mật
                    </h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="fa fa-check text-success"></i> Sử dụng mật khẩu mạnh với ít nhất 8 ký tự
                        </li>
                        <li class="mb-2">
                            <i class="fa fa-check text-success"></i> Kết hợp chữ hoa, chữ thường, số và ký tự đặc biệt
                        </li>
                        <li class="mb-2">
                            <i class="fa fa-check text-success"></i> Không sử dụng thông tin cá nhân trong mật khẩu
                        </li>
                        <li class="mb-2">
                            <i class="fa fa-check text-success"></i> Thay đổi mật khẩu định kỳ để bảo mật tài khoản
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .breadcrumb {
        background: none;
        padding: 0;
        margin-bottom: 1rem;
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
        background: linear-gradient(135deg, #ffc107, #ff8c00) !important;
    }
    
    .form-control {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }
    
    .form-control:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }
    
    .btn {
        border-radius: 10px;
        padding: 12px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .text-danger {
        font-size: 0.875em;
    }
    
    .list-unstyled li {
        font-size: 0.9em;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 