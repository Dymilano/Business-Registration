@model IEnumerable<DoanhNghiepPortal.Models.ArticleModel>
@{
    ViewData["Title"] = "Tin Tức";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">
                <i class="fas fa-newspaper text-danger me-3"></i>Tin Tức & Thông Báo
            </h1>
            
            <!-- Bộ lọc -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" action="/Home/News">
                        <div class="row">
                            <div class="col-md-4">
                                <label class="form-label">Danh mục:</label>
                                <select name="category" id="categoryFilter" class="form-select" onchange="this.form.submit()">
                                    <option value="">Tất cả danh mục</option>
                                    <option value="Tin tức">Tin tức</option>
                                    <option value="Hướng dẫn">Hướng dẫn</option>
                                    <option value="Thông báo">Thông báo</option>
                                    <option value="Tư vấn">Tư vấn</option>
                                    <option value="Khác">Khác</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Tìm kiếm:</label>
                                <input type="text" name="search" class="form-control" value="@ViewBag.Search" placeholder="Tìm kiếm bài viết...">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="fas fa-search"></i> Tìm
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Danh sách bài viết -->
            @if (Model.Any(a => a.Status == "Published"))
            {
                <div class="row">
                    @foreach (var article in Model.Where(a => a.Status == "Published"))
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <span class="badge bg-warning text-dark">@article.Category</span>
                                        <small class="text-muted">@article.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </div>
                                    
                                    <h5 class="card-title">@article.Title</h5>
                                    
                                    <p class="card-text text-muted">
                                        @(article.Content.Length > 100 ? article.Content.Substring(0, 100) + "..." : article.Content)
                                    </p>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="fas fa-user me-1"></i>@article.Author
                                        </small>
                                        <a href="/Home/ArticleDetail/@article.Id" class="btn btn-outline-danger btn-sm">
                                            Đọc thêm
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                    <h4>Chưa có bài viết nào</h4>
                    <p class="text-muted">Hiện tại chưa có bài viết nào được xuất bản.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Set selected value for category filter
        document.addEventListener('DOMContentLoaded', function() {
            const categoryFilter = document.getElementById('categoryFilter');
            if (categoryFilter) {
                categoryFilter.value = '@ViewBag.Category';
            }
        });
    </script>
} 