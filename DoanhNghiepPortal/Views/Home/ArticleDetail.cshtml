@model DoanhNghiepPortal.Models.ArticleModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/Home/News">Tin tức</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>

            <!-- Article Header -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <span class="badge bg-warning text-dark">@Model.Category</span>
                        <small class="text-muted">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    
                    <h1 class="card-title mb-3">@Model.Title</h1>
                    
                    <div class="d-flex align-items-center text-muted mb-3">
                        <i class="fas fa-user me-2"></i>
                        <span class="me-3">@Model.Author</span>
                        <i class="fas fa-eye me-2"></i>
                        <span>@Model.ViewCount lượt xem</span>
                    </div>
                </div>
            </div>

            <!-- Article Content -->
            <div class="card">
                <div class="card-body">
                    <div class="article-content" style="line-height: 1.8; font-size: 1.1rem;">
                        @Html.Raw(Model.Content.Replace("\n", "<br>"))
                    </div>
                </div>
            </div>

            <!-- Back to News -->
            <div class="text-center mt-4">
                <a href="/Home/News" class="btn btn-outline-danger">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại trang tin tức
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .article-content {
        color: #333;
    }
    
    .article-content h1, .article-content h2, .article-content h3 {
        color: #dc3545;
        margin-top: 1.5rem;
        margin-bottom: 1rem;
    }
    
    .article-content p {
        margin-bottom: 1rem;
    }
    
    .article-content ul, .article-content ol {
        margin-bottom: 1rem;
        padding-left: 2rem;
    }
    
    .article-content blockquote {
        border-left: 4px solid #dc3545;
        padding-left: 1rem;
        margin: 1.5rem 0;
        font-style: italic;
        color: #666;
    }
</style> 